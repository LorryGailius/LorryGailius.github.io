---
import BaseLayout from "../layouts/BaseLayout.astro";
import Card from "../components/Card/index.astro";
const title = "404";
const seoTitle = "404 - Page Not Found";
const seoDesc = "The page you are looking for was not found.";
const btnClass =
  "py-2 px-8 rounded-full font-medium text-base border border-neutral-600/40 hover:bg-neutral-500/10";
---

<BaseLayout title={title} seoTitle={seoTitle} seoDesc={seoDesc}>
  <main class="h-screen flex justify-center items-center">
    <div class="max-w-lg w-full p-10 sm:0">
      <Card>
        <div class="text-center m-10">
          <h1 class="text-6xl font-bold mb-4">{title}</h1>
          <p class="text-lg text-gray-600">{seoDesc}</p>
          <div class="mt-8">
            <a href="/" class={btnClass}> Go Home</a>
          </div>
        </div>
      </Card>
    </div>
  </main>
</BaseLayout>
