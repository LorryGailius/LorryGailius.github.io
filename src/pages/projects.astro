---
import MainLayout from "../layouts/MainLayout.astro";
import ProjectsCard from "../components/ProjectsCard.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
---

<MainLayout
  title="Laurynas Gailius | Projects"
  seoTitle="Laurynas Gailius Software Engineer Projects Page"
  seoDesc="Collection of projects I've worked on."
>
  <main
    class="m-auto mt-5 px-5 sm:px-0 sm:mt-auto max-w-2xl relative flex-auto w-full"
  >
    <ProjectsCard title="Projects" projects={projects} />
  </main>
</MainLayout>
